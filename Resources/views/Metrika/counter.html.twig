{% spaceless %}
    <!-- Yandex.Metrika counter -->
    <script type="text/javascript">
        (function (d, w, c) {
            (w[c] = w[c] || []).push(function() {
                try {
                    w.yaCounter{{ config.id }} = new Ya.Metrika({
                        id:{{ config.id }},
                        webvisor:{% if config.webvisor %}true{% else %}false{% endif %},
                        clickmap:{% if config.clickmap %}true{% else %}false{% endif %},
                        accurateTrackBounce:{% if config.accurateTrackBounce %}true{% else %}false{% endif %},
                        trackHash:{% if config.trackHash %}true{% else %}false{% endif %},
                        {% if config.ut %}
                            ut:"noindex",
                        {% endif %}
                        trackLinks: {% if config.trackLinks %}true{% else %}false{% endif %}
                    });
                } catch(e) { }
            });

            var n = d.getElementsByTagName("script")[0],
                    s = d.createElement("script"),
                    f = function () { n.parentNode.insertBefore(s, n); };
            s.type = "text/javascript";
            s.async = true;
            s.src = (d.location.protocol == "https:" ? "https:" : "http:") + "//mc.yandex.ru/metrika/watch.js";

            if (w.opera == "[object Opera]") {
                d.addEventListener("DOMContentLoaded", f, false);
            } else { f(); }
        })(document, window, "yandex_metrika_callbacks");
    </script>
    <noscript>
        <div>
            <img src="//mc.yandex.ru/watch/{{ config.id }}{% if config.ut %}?ut=noindex{% endif %}" style="position:absolute; left:-9999px;" alt="" />
        </div>
    </noscript>
    <!-- /Yandex.Metrika counter -->
{% endspaceless %}